<?xml version="1.0" encoding="utf-8"?>
    <navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation"
        app:startDestination="@id/launchScreenActivity">

        <activity
            android:id="@+id/launchScreenActivity"
            android:name="com.example.intesavincente.LaunchScreenActivity"
            android:label="activity_launch_screen"
            tools:layout="@layout/launch_screen" />
    <action
        android:id="@+id/action_from_launchScreenActivity_to_profilo"
        app:destination="@id/profilo" />
        <activity
            android:id="@+id/profilo"
            android:name="com.example.intesavincente.ProfiloFragment"
            android:label="activity_news"
            tools:layout="@layout/fragment_profilo" />
    <action
            android:id="@+id/action_from_launchScreenActivity_to_authenticationActivity"
            app:destination="@id/authenticationActivity" />
        <activity
            android:id="@+id/authenticationActivity"
            android:name="com.example.intesavincente.ui.AuthenticationActivity"
            android:label="activity_authentication"
            tools:layout="@layout/activity_authentication" />

</navigation>